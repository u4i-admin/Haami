<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/contents_back"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center">
    <TextView
        android:id="@+id/useful_contents_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/recovery_and_us"
        android:textColor="#012a27"
        android:textSize="25sp" />
        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/upper_rectangle">

                <TextView
                    android:id="@+id/useful_content_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="toContents"
                    android:text="@string/twelve_wrong_beliefs_in_addiction"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#012a27"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/upper_rectangle">

                <TextView
                    android:id="@+id/useful_content_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="toContents"
                    android:text="@string/best_diet_to_quit_drug_addiction"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#012a27"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/upper_rectangle">

                <TextView
                    android:id="@+id/useful_content_title3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="toContents"
                    android:text="@string/recovery_requirements"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#012a27"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/upper_rectangle">

                <TextView
                    android:id="@+id/useful_content_title4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="toContents"
                    android:text="@string/sociology_of_addiction"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#012a27"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/upper_rectangle">

                <TextView
                    android:id="@+id/useful_content_title5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="toContents"
                    android:text="@string/role_of_nutrition_in_recovery"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#012a27"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/upper_rectangle">

                <TextView
                    android:id="@+id/useful_content_title6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="toContents"
                    android:text="@string/letter_from_addiction"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#012a27"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/upper_rectangle">

                <TextView
                    android:id="@+id/useful_content_title7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="toContents"
                    android:text="@string/everything_about_recovery"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#012a27"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/upper_rectangle">

                <TextView
                    android:id="@+id/useful_content_title8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="toContents"
                    android:text="@string/knowing_more_about_recovery"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#012a27"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/icons_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_tab"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:onClick="justForToday"
            app:srcCompat="@drawable/just_for_today_icon"
            android:layout_weight=".16"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            app:srcCompat="@drawable/basic_book_icon"
            android:layout_weight=".16"
            android:onClick="toBasicBook"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:onClick="toUsefulPlacesAndLinks"
            app:srcCompat="@drawable/useful_places_icon"
            android:layout_weight=".16"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:onClick="toUsefulContents"
            app:srcCompat="@drawable/useful_contents_icon"
            android:layout_weight=".16"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:onClick="toUse"
            app:srcCompat="@drawable/use_icon"
            android:layout_weight=".16"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:onClick="start"
            app:srcCompat="@drawable/home_icon"
            android:layout_weight=".2"/>
    </LinearLayout>
</LinearLayout>