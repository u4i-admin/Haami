<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/contents_back"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/contents_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="راهنما"
            android:textColor="#012a27"
            android:textSize="25sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/welcome_samp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/mainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/main_samp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/jftText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/jft_samp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/bbText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bb_samp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/uplText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/upl_samp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/upText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/up_samp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/ulText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ul_samp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/ucText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/uc_samp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/content_samp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/useText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/use_samp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/icons_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_tab"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:layout_weight=".16"
            android:onClick="justForToday"
            app:srcCompat="@drawable/just_for_today_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:layout_weight=".16"
            app:srcCompat="@drawable/basic_book_icon"
            android:onClick="toBasicBook"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:layout_weight=".16"
            android:onClick="toUsefulPlacesAndLinks"
            app:srcCompat="@drawable/useful_places_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:layout_weight=".16"
            android:onClick="toUsefulContents"
            app:srcCompat="@drawable/useful_contents_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:layout_weight=".16"
            android:onClick="toUse"
            app:srcCompat="@drawable/use_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:layout_weight=".2"
            android:onClick="start"
            app:srcCompat="@drawable/home_icon" />
    </LinearLayout>
</LinearLayout>