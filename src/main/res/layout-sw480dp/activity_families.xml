<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/contents_back"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/useful_contents_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/families_title"
            android:textColor="#012a27"
            android:textSize="25sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/family_disease_of_addiction"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/damages_of_addiction_on_families"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/what_families_should_know"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/steps_of_NA_families"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/roles_of_NA_fimily_members"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/a_letter_from_an_addict"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/icons_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bottom_tab"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".16"
            android:onClick="justForToday"
            app:srcCompat="@drawable/just_for_today_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".16"
            app:srcCompat="@drawable/basic_book_icon"
            android:onClick="toBasicBook"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".16"
            android:onClick="toUsefulPlacesAndLinks"
            app:srcCompat="@drawable/useful_places_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".16"
            android:onClick="toUsefulContents"
            app:srcCompat="@drawable/useful_contents_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".16"
            android:onClick="toUse"
            app:srcCompat="@drawable/use_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".2"
            android:onClick="start"
            app:srcCompat="@drawable/home_icon" />
    </LinearLayout>
</LinearLayout>