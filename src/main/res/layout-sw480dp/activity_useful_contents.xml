<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/useful_contents_back"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/useful_contents_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/titr_tab"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:text="@string/useful_contents"
                    android:textColor="#012a27"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/titr_tab"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    app:srcCompat="@drawable/check" />

                <TextView
                    android:id="@+id/useful_content_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toRecoveryAndUs"
                    android:text="@string/recovery_and_us"
                    android:textColor="#012a27"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/titr_tab"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    app:srcCompat="@drawable/check" />

                <TextView
                    android:id="@+id/useful_content_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toFamilies"
                    android:text="@string/families_title"
                    android:textColor="#012a27"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/titr_tab"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    app:srcCompat="@drawable/check" />

                <TextView
                    android:id="@+id/useful_content_title3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toLikeMe"
                    android:text="@string/like_me"
                    android:textColor="#012a27"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/titr_tab"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    app:srcCompat="@drawable/check" />

                <TextView
                    android:id="@+id/useful_content_title4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toNarcotics"
                    android:text="@string/what_do_you_know_about_narcos"
                    android:textColor="#012a27"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/icons_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bottom_tab"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".16"
            android:onClick="justForToday"
            app:srcCompat="@drawable/just_for_today_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".16"
            app:srcCompat="@drawable/basic_book_icon"
            android:onClick="toBasicBook"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".16"
            android:onClick="toUsefulPlacesAndLinks"
            app:srcCompat="@drawable/useful_places_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".16"
            android:onClick="toUsefulContents"
            app:srcCompat="@drawable/useful_contents_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".16"
            android:onClick="toUse"
            app:srcCompat="@drawable/use_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".2"
            android:onClick="start"
            app:srcCompat="@drawable/home_icon" />
    </LinearLayout>
</LinearLayout>