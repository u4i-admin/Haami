<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/contents_back"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/useful_contents_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/what_do_you_know_about_narcos"
            android:textColor="#012a27"
            android:textSize="25sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title41"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/opium_and_like_that"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/crack_and_cocaine"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title43"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/amphetamines"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title44"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/marijuana"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title45"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/tranquilizer"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title46"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/nicotine"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title47"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/ecstasy"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title48"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/lsd"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title49"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/steroids"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title410"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/alcohol"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title411"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toContents"
                    android:text="@string/temgesic_and_norgesic"
                    android:textColor="#012a27"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/upper_rectangle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/useful_content_title412"
                    android:layout_width="match_parent"
