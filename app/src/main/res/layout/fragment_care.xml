<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundMindFulness"
    tools:context="com.haami.haami.CareFragment">

    <View
        android:id="@+id/player_background_view"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:background="@drawable/care_player_background"
        app:layout_constraintBottom_toTopOf="@+id/body_scan_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCarePlayerBackground"
        android:src="@drawable/relaxation_play_icon"
        app:layout_constraintBottom_toBottomOf="@+id/player_background_view"
        app:layout_constraintEnd_toEndOf="@+id/player_background_view"
        app:layout_constraintStart_toStartOf="@+id/player_background_view"
        app:layout_constraintTop_toTopOf="@+id/player_background_view" />

    <TextView
        android:id="@+id/body_scan_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iran_sans"
        android:padding="10dp"
        android:text="اسکن بدن اسکن بدن اسکن بدن اسکن بدن اسکن بدن اسکن بدن اسکن بدن اسکن بدن اسکن بدن اسکن بدن اسکن بدن اسکن بدن اسکن بدن اسکن بدن اسکن بدن ا "
        android:textColor="@color/colorBackground"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintTop_toBottomOf="@+id/player_background_view"
        tools:layout_editor_absoluteX="10dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/body_scan_text"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>